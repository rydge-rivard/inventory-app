<!DOCTYPE html>
<html>
  <head>
    <%- include('../views/components/head'); %>
  </head>
  <header><%- include('../views/components/header'); %></header>
  <body>
    <main>
      <h1><%= title %></h1>
      <section class="form-wrapper">
        <form method="post">
          <fieldset>
            <ul>
              <li>
                <label for="manufacturer">*Manufacturer:</label>
                <input
                  type="text"
                  id="manufacturer"
                  name="manufacturer"
                  required
                  value="<%= vehicle === undefined ? '' : vehicle.manufacturer %>"
                />
              </li>
              <li>
                <label for="model">*Model:</label>
                <input
                  type="text"
                  id="model"
                  name="model"
                  value="<%= vehicle === undefined ? '' : vehicle.model %>"
                />
              </li>
              <li>
                <label for="year">*Year:</label>
                <input
                  type="date"
                  id="year"
                  name="year"
                  value="<%= vehicle === undefined ? '' : vehicle.year %>"
                />
              </li>
            </ul>
          </fieldset>
          <% if(errors){ %>
          <ul>
            <% errors.forEach(function(err) { %>
            <li class="err"><%= '*' + err.msg %></li>
          </ul>
          <% })} %>
          <button type="submit">Submit</button>
        </form>
      </section>
    </main>
  </body>
</html>
